<launch>
  <node pkg="ar_pose" type="ar_single" name="handle_marker" output="screen">
    <remap from="/camera/camera_info" to="/multisense/left/camera_info" />
    <remap from="/camera/image_raw" to="/multisense/left/image_rect_color" />
    <rosparam>
      marker_pattern: /home/lueda/Downloads/patternMaker/examples/ARToolKit_Patterns/4x4_1.patt
      marker_width: 76.0
      marker_height: 76.0
      marker_center_x: 0
      marker_center_y: 0
      publish_tf: false
      publish_marker: false
    </rosparam>
  </node>
  <node pkg="drc_task_common" type="ar_marker_to_pose.py" name="handle_marker_pose">
    <remap from="~input" to="/ar_pose_marker" />
  </node>
  <node pkg="jsk_topic_tools" type="static_transform_pose_stamped"
        name="handle_pose"
        args="0 0 0 0 0 1.53 handle_marker_pose/output handle_pose">
    <remap from="~input" to="handle_marker_pose/output" />
  </node>
  <node pkg="jsk_topic_tools" type="static_transform_pose_stamped"
        name="crank_pose"
        args="0 -0.12 0 0 0 1.53 handle_marker_pose/output crank_pose">
    <remap from="~input" to="handle_marker_pose/output" />
  </node>
</launch>
